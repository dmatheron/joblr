%ul.nav
  - if signed_up? current_user
    - if current_user.activated?
      %li= link_to t('profile_emails.index.title'), profile_emails_path
    - else
      %li= link_to t('profile_emails.new.title'), new_profile_email_path
    %li= link_to t('users.show.title'), user_path(current_user)
  - if current_user.admin?
    %li= link_to t('pages.admin.title_alt'), admin_path
    %li= link_to t('pages.style_tile.title'), style_tile_path
  %li= link_to t('devise.registrations.account_settings'), edit_user_registration_path
  %li= link_to t('devise.sessions.logout'), destroy_user_session_path, method: 'delete'