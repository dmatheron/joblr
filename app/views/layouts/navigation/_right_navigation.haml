%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{href: '#', 'data-toggle' => 'dropdown'}
        = image_tag(current_user.image_url(:thumb)) unless current_user.image.blank?
        = current_user.fullname
        .caret
      %ul.dropdown-menu
        %li= link_to t('devise.registrations.account_settings'), edit_user_registration_path
        %li= link_to t('devise.sessions.logout'), destroy_user_session_path, method: 'delete'