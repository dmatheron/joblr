%ul.nav
  - if user_signed_in?
    %li= link_to t('pages.overview.title_alt'), home_url
    %li= link_to t('profile'), current_user
    - if current_user.admin?
      %li= link_to t('pages.admin.title_alt'), admin_path
      %li= link_to t('pages.style_tile.title'), style_tile_path
    %li.dropdown
      %a.dropdown-toggle{src: '#', 'data-toggle' => 'dropdown'}
        = image_tag(current_user.image_url(:thumb), style: 'width:22px; height:22px; margin-right:5px') unless current_user.image.blank?
        = current_user.fullname
      %ul.dropdown-menu
        %li= link_to t('devise.registrations.account_settings'), edit_user_registration_path
        %li= link_to t('devise.sessions.logout'), destroy_user_session_path, method: 'delete'
  - else
    %li= link_to t('pages.overview.title'), root_url(subdomain: false)
    %li= link_to t('devise.registrations.sign_in'), new_user_session_url(subdomain: false)