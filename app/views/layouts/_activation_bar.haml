#activation-bar.hidden-phone
  .row-fluid.bar
    .span4
      %h3=t "activation.title_#{step}#{'_social' if step == 1 && !session[:auth_hash].nil?}"
    .span7
      .row-fluid
        .span4
          .progress.progress-blue
            .bar{style: 'width:100%'}
        .span4{style: 'margin-left:2px;'}
          .progress.progress-blue
            .bar{style: "width:#{step == 1 ? '0' : '100'}%"}
        .span4{style: 'margin-left:2px;'}
          .progress.progress-blue
            .bar{style: "width:#{step == 3 ? '100' : '0'}%"}
    .span1
      %h5=t 'activation.step_x_of_3', x: step
  .row-fluid.margin