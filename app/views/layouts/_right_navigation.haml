%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{src: '#', 'data-toggle' => 'dropdown'}
        = current_user.fullname.blank? || current_user.fullname.nil? ? 'Account' : current_user.fullname
        %b.caret
      %ul.dropdown-menu
        %li= link_to "#{current_user.fullname.blank? || current_user.fullname.nil? ? 'Settings' : 'Account settings'}",
                      edit_user_registration_path
        %li= link_to 'Logout', destroy_user_session_path, method: 'delete'
  - else
    %li
      = link_to 'Sign in', new_user_session_path
    %li
      = link_to 'Sign up', new_user_registration_path