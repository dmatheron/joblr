%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{src: '#', 'data-toggle' => 'dropdown'}
        = current_user.fullname.blank? || current_user.fullname.nil? ? t('account') : current_user.fullname
        %b.caret
      %ul.dropdown-menu
        %li= link_to "#{current_user.fullname.blank? || current_user.fullname.nil? ? t('settings') : t('account_settings')}",
                      edit_user_registration_path
        %li= link_to t('devise.sessions.logout'), destroy_user_session_path, method: 'delete'
  - else
    %li
      = link_to t('devise.registrations.sign_in'), new_user_session_url(subdomain: false)
    %li
      = link_to t('devise.registrations.sign_up'), new_user_registration_url(subdomain:false)