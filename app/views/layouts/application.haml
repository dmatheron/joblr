!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= title
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    - if Rails.env.production?
      = analytics_init
      = kiss_init

  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container-fluid
          = link_to image_tag('base/logo.png', alt: 'Joblr'), root_path, class: 'brand'
          .btn.btn-navbar{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
            .icon-bar
            .icon-bar
            .icon-bar
          .nav-collapse
            = render 'layouts/left_navigation'
            = render 'layouts/right_navigation'

    = render 'layouts/messages'

    .container-fluid
      .row-fluid
        = yield

  - if Rails.env.production?
    = kiss_event('identity', current_user.id) if user_signed_in?
    = render 'layouts/usabilla'