!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= title
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = mixpanel_init          
    - if Rails.env.production?
      = analytics_init
      - if request.subdomain.include? 'staging'
        = kiss_init :staging
      - else
        = kiss_init :production

  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation/navigation'

    .container
      = render 'layouts/alerts'

      #content.row-fluid
        = yield

    %footer
      = render 'layouts/footer'

  = kiss_event('identity', current_user.username) if user_signed_in?
  = mixpanel_identify(current_user.username) if user_signed_in?
