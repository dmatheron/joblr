!!!
%html
  %head
    = raw analytical.head_prepend_javascript unless Rails.env.test?
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= title
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = analytical.identify(current_user.id, email: current_user.email) if user_signed_in? && !Rails.env.test?
    = raw analytical.head_append_javascript unless Rails.env.test?

  %body
    = raw analytical.body_prepend_javascript unless Rails.env.test?

    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'

    .container
      = render 'layouts/messages'
      #content.row-fluid
        = yield

    %footer
      .container
        .row-fluid
          .span12
            .pull-left
              &copy; Joblr 2012
            .pull-right
              =t 'footer.questions'
              = link_to t('footer.contact_us'), 'mailto:team@joblr.co'

    = raw analytical.body_append_javascript unless Rails.env.test?
