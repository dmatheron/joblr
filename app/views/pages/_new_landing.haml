.span12#new_landing
  .row-fluid
    .span12
      .hero-unit
        .row-fluid
          .span1.hidden-phone
          .span10
            %h1=t 'pages.new_landing.title'
        .row-fluid
          .span12
            .the-hero
              .visible-desktop= image_tag "screenshots/new_landing/hero_#{locale}.jpg"
              .hidden-desktop= image_tag "screenshots/new_landing/hero_mobile_#{locale}.jpg"

  #grey_background
    .container
      .row-fluid#cta_testimonials
        .span12
          .row-fluid#cta
            .span9
              %h1=t 'pages.new_landing.cta_title'
            .span3
              %a.btn.btn-large.btn-primary.btn-top{href: new_invite_email_path}=t 'pages.landing.join'
          .row-fluid#testimonials
            .visible-desktop
              .span4
                %p
                  =t 'pages.new_landing.testimonial_1_html'
                %span.by - Porta Ipsum
              .span4.offset1
                %p
                  =t 'pages.new_landing.testimonial_2_html'
                %span.by - Aenean Dolor
            .visible-tablet
              .span5
                %p
                  =t 'pages.new_landing.testimonial_1_html'
                %span.by - Porta Ipsum
              .span5.offset1
                %p
                  =t 'pages.new_landing.testimonial_2_html'
                %span.by - Aenean Dolor
            .visible-phone
              .span12
                %p
                  =t 'pages.new_landing.testimonial_1_html'
                %span.by - Porta Ipsum

  .row-fluid#screenshots
    .span12
      %a{href: '#modal_signup', 'data-toggle'       => 'modal'}= image_tag 'screenshots/new_landing/signup.jpg'
      %a{href: '#modal_profile', 'data-toggle'      => 'modal'}= image_tag 'screenshots/new_landing/profile.jpg'
      %a{href: '#modal_apply', 'data-toggle'        => 'modal'}= image_tag 'screenshots/new_landing/apply.jpg'
      %a{href: '#modal_applications', 'data-toggle' => 'modal'}= image_tag 'screenshots/new_landing/applications.jpg'

  .row-fluid
    .span12
      .alert.alert-info=t 'pages.landing.disclaimer_html'

  .modal.screenshot#modal_signup.hide
    .modal-body
      = image_tag 'screenshots/new_landing/signup_big.png'
      %h5.pull-right=t 'pages.new_landing.screenshot_1'
  .modal.screenshot#modal_profile.hide
    .modal-body
      = image_tag 'screenshots/new_landing/profile_big.png'
      %h5.pull-right=t 'pages.new_landing.screenshot_2'
  .modal.screenshot#modal_apply.hide
    .modal-body
      = image_tag 'screenshots/new_landing/apply_big.png'
      %h5.pull-right=t 'pages.new_landing.screenshot_3'
  .modal.screenshot#modal_applications.hide
    .modal-body
      = image_tag 'screenshots/new_landing/applications_big.png'
      %h5.pull-right=t 'pages.new_landing.screenshot_4'
