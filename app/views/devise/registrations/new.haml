- devise_error_messages! unless resource.errors.empty?

.row-fluid.devise
  .span2.hidden-phone
  .span8
    .well
      .row-fluid
        .span6
          %h1= t('devise.registrations.skip_and_signin')
          = render 'shared/edit_social_links', user: resource, size: ''
        .span1
        .span1.visible-phone
        .span4
          %h4= t('devise.registrations.create_joblr_account')
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            %small= t('devise.registrations.fullname')
            %span.danger-text *
            %br/
            = f.text_field :fullname, class: 'span4'
            %small= t('devise.registrations.username')
            %span.danger-text *
            %br/
            = f.text_field :username, class: 'span4'
            %small= t('devise.registrations.password')
            %span.danger-text *
            %br/
            = f.password_field :password, class: 'span4'
            %small= t('devise.registrations.password_confirmation')
            %span.danger-text *
            %br/
            = f.password_field :password_confirmation, class: 'span4'
            = f.submit t('devise.registrations.sign_up'), class: 'btn btn-primary'
    .pull-right.danger-text * required fields