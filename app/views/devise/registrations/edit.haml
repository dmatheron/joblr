- devise_error_messages! unless resource.errors.empty?

.row-fluid.devise
  .span2.hidden-phone
  .span8
    .header
      %h1= t('devise.registrations.account_settings')
      .lead Change your details and social profiles
    .well
      .row-fluid
        .span5#joblr
          %h3= t('devise.registrations.edit.details')
          %br/
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f|
            - unless current_user.social?
              %small= t('devise.registrations.username')
              %span.danger-text *
              %br/
              = f.text_field :username, class: 'span4'
            - else
              = f.hidden_field :username
            %small= t('devise.registrations.fullname')
            %span.danger-text *
            %br/
            = f.text_field :fullname, class: 'span4'
            %small= t('devise.registrations.email')
            %br/
            = f.email_field :email, class: 'span4'

            - unless current_user.social?
              %small= t('devise.registrations.new_password')
              %br/
              = f.password_field :password, :autocomplete => 'off', class: 'span4'
              %small= t('devise.registrations.new_password_confirm')
              %br/
              = f.password_field :password_confirmation, class: 'span4'
            .buttons
              %a.btn{href: url_for(:back)}= t('cancel')
              = f.submit t('devise.registrations.update'), class: 'btn btn-primary'
        .span1
        .span1
        .span5#social
          %h3= t 'devise.registrations.edit.add_accounts'
          .big= t 'devise.registrations.edit.easy_signin'
          = render 'devise/shared/omniauth_links', user: resource, size: ''
          .problem
            %h4= t('devise.registrations.unhappy')
            = link_to t('devise.registrations.cancel_account'), registration_path(resource_name), :data => { :confirm => t('devise.registrations.yes_cancel') }, :method => :delete
    .pull-right.danger-text * required fields