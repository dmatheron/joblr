- unless resource.errors.empty?
  .alert.alert-error
    = devise_error_messages!
    %a.close{ "data-dismiss" => 'alert'} &#215;
.well
  %h2 Account settings
  %br/

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    %div
      #{f.label :username, class: 'inline'} *
      %br/
      = f.text_field :username

    %div
      = f.label :fullname
      = f.text_field :fullname

    %div
      = f.label :email
      = f.email_field :email

    %div= f.submit "Update", class: 'btn'
    %br/

  %button.btn.btn-large= link_to "Back", :back
  %br/
  %br/
  %br/
  %p
    Unhappy?
    %br/
    = link_to "Cancel your account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete