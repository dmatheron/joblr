- devise_error_messages! unless resource.errors.empty?

.row-fluid.devise
  .span2.hidden-phone
  .span8
    .header
      %h1=t 'devise.sessions.new.welcome_back'
      .lead=t 'devise.sessions.new.choose'
    .well
      .row-fluid
        .span7#social
          %h3= t('devise.sessions.new.social')
          %br/
          = render 'devise/shared/omniauth_links', user: resource, size: 'btn-large'
        .span1
        .span1.visible-phone
        .span4#joblr
          %h3= t('devise.sessions.new.joblr')
          .big= t 'devise.sessions.new.if_joblr'
          .hidden-phone
            %br/
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %small= t('devise.sessions.login')
            %span.danger-text *
            %br/
            = f.text_field :login, class: 'span4'
            %small= t('devise.sessions.password')
            %span.danger-text *
            %br/
            = f.password_field :password, class: 'span4'
            - if devise_mapping.rememberable?
              %small.delete=t 'devise.sessions.remember_me'
              &nbsp;
              = f.check_box :remember_me, class: 'inline', style: 'margin-top:0'
              %br/
            = f.submit t('devise.sessions.sign_in'), class: 'btn btn-primary'
            .problem
              %h4=t 'devise.sessions.problem'
              = render 'devise/shared/links'
    .pull-right.danger-text * #{t('required_fields')}