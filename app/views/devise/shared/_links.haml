- if controller_name != 'sessions'
  = link_to t('devise.registrations.sign_in'), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && !(%w(registrations sessions passwords).include? controller_name)
  = link_to t('devise.registrations.sign_up'), new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t('devise.registrations.forgot_password'), new_password_path(resource_name)
  %br/