- devise_error_messages! unless resource.errors.empty?

.span3.hidden-phone
.span6.devise
  .well
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f|
      .row-fluid
        .span7
          %h1=t 'devise.registrations.forgot_password'
          %small=t 'devise.registrations.email'
          %span.danger-text *
          %br/
          = f.email_field :email
        .span1.hidden-phone
        .span4.hidden-phone
          %h4=t 'devise.passwords.sign_in'
          = render 'devise/shared/links'
      .row-fluid
        .span10
          %a.btn{href: url_for(:back)}= t('cancel')
          = f.submit t('devise.passwords.email_me'), class: 'btn btn-primary'
  .pull-right.danger-text * required fields