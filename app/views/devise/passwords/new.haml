- devise_error_messages! unless resource.errors.empty?

.span3.hidden-phone
.span6.devise
  .well
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f|
      .row-fluid
        .span8
          %h1=t 'devise.registrations.forgot_password'
          %label.inline=t 'devise.registrations.login'
          %span.danger-text *
          %br/
          = f.text_field :login
          %br/
          %a.btn{href: url_for(:back)}= t('cancel')
          = f.submit t('devise.passwords.email_me'), class: 'btn btn-primary'
        .span3.visible-desktop
          %h4=t 'devise.passwords.sign_in'
          = render 'devise/shared/links'
      .row-fluid.hidden-desktop
        .span11
          %br/
          %br/
          %h4=t 'devise.passwords.sign_in'
          = render 'devise/shared/links'
  .pull-right.danger-text * #{t('required_fields')}