%small=t 'users.edit.social_urls'
%a.help{rel:'popover', 'data-content' => t('users.edit.social_urls_popover'), 'data-original-title' => t('users.edit.social_urls')}
  .icon-question-sign
#social-url-triggers.row-fluid
  .span12
    - %w(twitter linkedin facebook google).each do |provider|
      .btn.btn-small{class: "btn-#{provider}", title: t('users.edit.add_social_url', provider: provider.titleize), id: "#{provider}-url-trigger"}
        %i{class: "icon-#{provider}#{'-plus' if provider == 'google'}"}
        &nbsp;
        = provider.titleize
#social-url-fields.row-fluid
  .span7
    - %w(twitter linkedin facebook google).each do |provider|
      = f.text_field "#{provider}_url", placeholder: social_url_placeholder(provider), id: "#{provider}-url-field", class: 'span12'