.span12
  = form_for @user, html: {id: 'edit-form'} do |f|
    .row-fluid
      - unless signed_up?(@user)
        #popovers.span3.visible-desktop
          = render 'edit_popovers'
        .span3.visible-tablet
      - else
        .span3.hidden-phone
      .span5
        = render 'edit_text', f: f
        .well#profile
          = render 'edit_identity', f: f
          = f.fields_for(:profiles) {|profile_builder| render 'fields_profile', f: profile_builder}
        .pull-right.danger-text#required * required fields
      .span2
      .span2
        = render 'edit_buttons',    f: f
        - unless signed_up?(@user)
          .visible-desktop= render 'edit_onboarding', f: f