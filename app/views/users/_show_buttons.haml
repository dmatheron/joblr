#buttons
  - if user_signed_in? && current_user == user && !has_subdomain
    %a.btn.btn-large.btn-top.btn-primary{href: edit_user_path(user)}
      =t 'users.show.edit'
  - else
    %a.btn.btn-large.btn-top.btn-danger
      =t 'users.show.contact'
  .btn-group
    .btn.btn-large.dropdown-toggle{"data-toggle" => 'dropdown', href:'#', class: "#{(user_signed_in? && current_user == user && !has_subdomain) ? 'btn-danger'  :'btn-inverse'}"}
      &nbsp;
      =t 'users.show.share'
      %span.caret.hidden-tablet
    %ul.dropdown-menu
      %li
        %a{href: new_email_sharing_url(id: user.id, subdomain: false)}
          .icon-envelope
          &nbsp;
          = t 'users.show.email'
      %li
        %a{href: "http://www.linkedin.com/shareArticle?mini=true&url=#{user.public_url}&title=#{t('users.show.sharings.title', fullname: user.fullname)}&summary=#{t('users.show.sharings.motto')}&source=Joblr", target: '_blank', title: t('users.show.buttons.share_linkedin')}
          .icon-linkedin
          &nbsp;
          Linkedin
      %li
        %a{href: "http://www.facebook.com/sharer.php?u=#{user.public_url}", target: '_blank', title: t('users.show.buttons.share_facebook')}
          .icon-facebook
          &nbsp;
          Facebook
      %li
        %a{href: "http://www.twitter.com/share?url=#{user.public_url}&text=#{t('users.show.sharings.title', fullname: user.fullname).gsub(' ','+')}", target: '_blank', title: t('users.show.buttons.share_twitter')}
          .icon-twitter
          &nbsp;
          Twitter
      %li
        %a{href: "https://plus.google.com/share?url=#{user.public_url}", target: '_blank', title: t('users.show.buttons.share_google')}
          .icon-google-plus
          &nbsp;
          Google

  .explanation
    - if user_signed_in? && current_user == user && !has_subdomain
      %h5=t 'users.show.public_profile'
      %p=t 'users.show.explanation_html', url: link_to(user.public_url, user.public_url, target: '_new')

    - else
      %h5 Whatâ€™s this?
      %p #{user.fullname.split.first} is looking for a job and wants your help. Contact him if you have a job or a tip for him. Otherwise help him out by sharing his profile!