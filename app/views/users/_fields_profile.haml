.row
  .span3.offset1
    %label= t('users.edit.headline_label')
    = f.select :headline, headline_options
.row
  .span4
    %h4= t('users.edit.exp_edu')
  .span1
    %label= t('card.experience')
    = f.text_field :experience, value: @user.linkedin_attr(:experience, @linkedin), placeholder: t('users.edit.experience_placeholder'), class: 'input-mini'
  .span3
    %label= t('card.education')
    = f.text_area :education, value: @user.linkedin_attr(:education, @linkedin), placeholder: t('users.edit.education_placeholder'), rows:3
    %br/
.row
  .span4
    %h4= t('card.skills')
    .row
      .span2= f.text_field :skill_1, value: @user.linkedin_attr(:skill_1, @linkedin), placeholder: t('users.edit.skill_1_placeholder')
      .span1= f.select :skill_1_level, %w(Beginner Intermediate Advanced Expert), {selected: (@user.profile.skill_1_level ||= 'Intermediate')}, {class: 'select-level'}
      %br/
      %br/
      .span2= f.text_field :skill_2, value: @user.linkedin_attr(:skill_2, @linkedin), placeholder: t('users.edit.skill_2_placeholder')
      .span1= f.select :skill_2_level, %w(Beginner Intermediate Advanced Expert), {selected: (@user.profile.skill_2_level ||= 'Intermediate')}, {class: 'select-level'}
      %br/
      %br/
      .span2= f.text_field :skill_3, value: @user.linkedin_attr(:skill_3, @linkedin), placeholder: t('users.edit.skill_3_placeholder')
      .span1= f.select :skill_3_level, %w(Beginner Intermediate Advanced Expert), {selected: (@user.profile.skill_3_level ||= 'Intermediate')}, {class: 'select-level'}
.row
  .span4{style:'padding-bottom:6px'}
    %h4= t('card.qualities')
    .row
      .span3= f.text_field :quality_1, placeholder: t('users.edit.quality_1_placeholder')
    .row
      .span3= f.text_field :quality_2, placeholder: t('users.edit.quality_2_placeholder')
    .row
      .span3= f.text_field :quality_3, placeholder: t('users.edit.quality_3_placeholder')
.row
  .span4
    %h4= t('users.edit.social_profiles')
    = render 'shared/auth_links', user: @user
.row
  .span4
    %h4= t('users.edit.upload_cv')
    - unless @user.profile.file.nil? || @user.profile.file.blank?
      .delete.danger-text delete #{link_to @user.profile.file_identifier, @user.profile.file_url, style:'text-decoration:underline'}
      &nbsp;
      = f.check_box :remove_file
      %br/
    = f.file_field :file
.row
  .span4
    %h4= t('users.edit.website_blog')
    = f.text_field :url, placeholder:'e.g. http://example.com'
.row.hidden
  .span4
    %h4= t('users.edit.text_label')
    = f.text_area :text, placeholder: t('users.edit.text_placeholder'), rows:3
    %br/
    %br/
    = f.submit t('save'), class: 'btn btn-large btn-primary'